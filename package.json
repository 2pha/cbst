{
  "name": "cbst",
  "version": "1.0.0",
  "description": "Chris Brown's starter theme.",
  "scripts": {
    "css:watch": "postcss assets/src/css/styles.css -d assets/dev/css -w",
    "css:build": "postcss assets/src/css/styles.css -d assets/dist/css --env production",
    "js:watch": "rollup -c -w",
    "js:build": "rollup -c",
    "build": "npm run css:build && npm run js:build"
  },
  "author": "Chris Brown",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^14.1.0",
    "autoprefixer": "^10.4.11",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.13",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-focus": "^5.0.1",
    "postcss-import": "^15.0.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.2",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
